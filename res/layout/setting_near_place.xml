<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/ic_setting" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/imageView1"
        android:background="#BDBFBF"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" />



    <View
        android:id="@+id/view2"
        android:layout_alignBottom="@+id/view1"
        android:layout_alignParentTop="true"
      	android:layout_width="4dp"
      	android:layout_height="4dp"
       
        android:paddingBottom="2dp"
        android:background="#BFC6C7"
        
        android:layout_toRightOf="@+id/imageView1" />



    <TextView
        android:id="@+id/radiusinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:text="Near place status update"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        />
    
    <TextView
        android:id="@+id/radText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:layout_marginTop="58dp"
        android:background="@drawable/row"
         android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="2dp"
        android:textStyle="bold"
        android:text="Enable - you can status when you are near some specific place. After enabling this feature app send sms and to some specific people"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radText"
        android:layout_alignRight="@+id/radText"
        android:layout_below="@+id/radText"
        android:layout_marginTop="47dp"
        android:background="@drawable/row"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/near_place_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Enable status update" />
    </LinearLayout>
    
</RelativeLayout>